#!/bin/bash


. ./mtConf.txt


APP_NAME="test"
BIN_NAME="test"

MTCF_INIT
MTCF_PARSE_ARGS "$@"
MTCF_PRINT_HELP

MTCF_PRE_CONF
MTCF_CHECK_LIBS mtkit mtcelledit mtdatawell pthread rt mtpixy
MTCF_PKGCONFIG "sndfile"

MAKE_DIRS="mtpixycli mtpixyutils libmtcelledit mtcedcli mtcedutils mtrdc mtdwcli mtdwutils"

MTCF_POST_CONF

echo "SUITE         = ./suite.sh | tee log.txt" >> $CONF_FILE

MTCF_PRINT_CONF
